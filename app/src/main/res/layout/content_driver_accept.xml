<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.darshanapriyasad.driverapp.DriverAccept"
    tools:showIn="@layout/activity_driver_accept">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|text"
        android:ems="10"
        android:id="@+id/nameText"
        android:editable="false"
        android:hint="Customer Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|text"
        android:ems="10"
        android:id="@+id/fromLocationText"
        android:hint="From Location"
        android:layout_below="@+id/nameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/nameText"
        android:layout_alignEnd="@+id/nameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|text"
        android:ems="10"
        android:id="@+id/toLocationText"
        android:layout_below="@+id/fromLocationText"
        android:layout_alignLeft="@+id/fromLocationText"
        android:layout_alignStart="@+id/fromLocationText"
        android:hint="To Location"
        android:layout_alignRight="@+id/nameText"
        android:layout_alignEnd="@+id/nameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date|text"
        android:ems="10"
        android:id="@+id/dateText"
        android:layout_below="@+id/toLocationText"
        android:layout_alignLeft="@+id/toLocationText"
        android:layout_alignStart="@+id/toLocationText"
        android:hint="Date"
        android:layout_alignRight="@+id/timeText"
        android:layout_alignEnd="@+id/timeText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeText"
        android:layout_below="@+id/dateText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Time"
        android:layout_alignRight="@+id/dayCountText"
        android:layout_alignEnd="@+id/dayCountText"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|numberDecimal"
        android:ems="10"
        android:id="@+id/amountText"
        android:hint="Amount"
        android:layout_below="@+id/dayCountText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/nameText"
        android:layout_alignEnd="@+id/nameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|text"
        android:ems="10"
        android:id="@+id/dayCountText"
        android:layout_below="@+id/timeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Day Count"
        android:layout_alignRight="@+id/amountText"
        android:layout_alignEnd="@+id/amountText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeText"
        android:layout_below="@+id/amountText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Vehicle Type" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|text"
        android:ems="10"
        android:id="@+id/passCountText"
        android:layout_below="@+id/typeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Passenger Count"
        android:layout_alignRight="@+id/typeText"
        android:layout_alignEnd="@+id/typeText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accept"
        android:id="@+id/acceptButton"
        android:layout_below="@+id/passCountText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAck"
        android:id="@+id/backButton"
        android:layout_alignTop="@+id/acceptButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
